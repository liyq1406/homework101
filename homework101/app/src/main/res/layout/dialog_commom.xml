<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y12"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/per_name"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />


    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y10"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="@dimen/x3"
        android:textColor="@color/font_common_1"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/dialog_edit_bg"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:paddingLeft="@dimen/x10"
        android:hint="@string/please_input_your_name"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/commom_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_dialog_left_white"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textColor="@color/font_common_2"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/commom_background" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_dialog_right_white"
            android:gravity="center"
            android:text="@string/label_ok"
            android:textColor="@color/font_blue"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>


</LinearLayout>
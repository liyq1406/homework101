<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_go_payment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    tools:context=".mine.tutorship.GoPaymentPopupWindows"
    android:background="@color/white"
    >
<TextView
    android:id="@+id/tv_go_payment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/TextColorBlack"
    android:textSize="@dimen/font_super_large_size"
    android:text="@string/mine_pay_go_payment"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/dimen_15dp"
    />
    <ImageView
        android:id="@+id/iv_cancel_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cancel"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_go_payment"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_pay_sum_owing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_sum_owing"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintTop_toBottomOf="@+id/iv_cancel_pay"
        android:layout_marginTop="@dimen/dimen_40dp"
        />
    <TextView
        android:id="@+id/tv_pay_sum_owing_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.5+2.50*1478=3640.5"
        android:textColor="@color/TextColorRed"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_pay_sum_owing"
        />
    <View
        android:id="@+id/view_pay_line_one"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_sum_owing"
        android:layout_marginTop="@dimen/dimen_15dp"
        >
    </View>

    <TextView
        android:id="@+id/tv_pay_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_mode"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_one"
        android:layout_marginTop="@dimen/dimen_10dp"
        />
    <View
        android:id="@+id/view_pay_line_two"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_mode"
        android:layout_marginTop="@dimen/dimen_10dp"
        >
    </View>
    <ImageView
        android:id="@+id/iv_pay_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balance"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_two"
        app:layout_constraintTop_toTopOf="@+id/view_pay_line_two"
        app:layout_constraintBottom_toBottomOf="@+id/view_pay_line_three"
        />
    <TextView
        android:id="@+id/tv_pay_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mine_pay_balance"
        android:textSize="@dimen/font_large_size"
        android:textColor="@color/TextColorBlack"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_two"
        app:layout_constraintLeft_toRightOf="@+id/iv_pay_balance"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        />
    <TextView
        android:id="@+id/tv_available_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_large_size"
        android:textColor="@color/TextColorBlack"
        android:text="@string/mine_pay_available_balance"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_balance"
        app:layout_constraintLeft_toRightOf="@+id/iv_pay_balance"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        />
    <ImageView
        android:id="@+id/iv_balance_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_agree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_two"
        app:layout_constraintTop_toTopOf="@+id/view_pay_line_two"
        app:layout_constraintBottom_toBottomOf="@+id/view_pay_line_three"
        />
    <View
        android:id="@+id/view_pay_line_three"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_available_balance"
        android:layout_marginTop="@dimen/dimen_10dp"
        >
    </View>

    <TextView
        android:id="@+id/tv_pay_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mine_pay_weixin"
        android:textSize="@dimen/font_large_size"
        android:textColor="@color/TextColorBlack"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_three"
        app:layout_constraintLeft_toRightOf="@+id/iv_pay_balance"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        />
    <ImageView
        android:id="@+id/iv_pay_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wechat"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_three"
        app:layout_constraintTop_toTopOf="@+id/view_pay_line_three"
        app:layout_constraintBottom_toBottomOf="@+id/view_pay_line_four"
        />
    <ImageView
        android:id="@+id/iv_wechat_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_agree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_three"
        app:layout_constraintTop_toTopOf="@+id/view_pay_line_three"
        app:layout_constraintBottom_toBottomOf="@+id/view_pay_line_four"
        />
    <View
        android:id="@+id/view_pay_line_four"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_wechat"
        android:layout_marginTop="@dimen/dimen_20dp"
        >
    </View>

    <TextView
        android:id="@+id/tv_pay_alipay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mine_pay_alipay"
        android:textSize="@dimen/font_large_size"
        android:textColor="@color/TextColorBlack"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_four"
        app:layout_constraintLeft_toRightOf="@+id/iv_pay_alipay"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        />
    <ImageView
        android:id="@+id/iv_pay_alipay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alipay"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_four"
        app:layout_constraintTop_toTopOf="@+id/view_pay_line_four"
        app:layout_constraintBottom_toBottomOf="@+id/view_pay_line_five"
        />
    <ImageView
        android:id="@+id/iv_alipay_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_agree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_four"
        app:layout_constraintTop_toTopOf="@+id/view_pay_line_four"
        app:layout_constraintBottom_toBottomOf="@+id/view_pay_line_five"
        />
    <View
        android:id="@+id/view_pay_line_five"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_alipay"
        android:layout_marginTop="@dimen/dimen_20dp"
        >
    </View>
    <Button
        android:id="@+id/btn_pay_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_five"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:text="@string/mine_pay_ensure"
        android:background="@color/red_answer"
        android:textColor="@color/TextColorWhite"
        android:textSize="@dimen/font_large_size"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".teacher.FragmentTeacher">
    <View
        android:id="@+id/teacher_fillStatusBarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/homepage_bottom_navigation_font"
        app:tabIndicatorHeight="@dimen/y4"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/font_color_select"
        app:tabTextColor="@color/black"
        >
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_teacher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_56dp"
        android:background="@color/mine_homework_listview_bg"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shushan.homework101.mine.tutorship.HelpActivity">
    <include
        android:id="@+id/include_mine_help"
        layout="@layout/actionbar_layout"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_mine_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/holo_green_light"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/TextColorWhite"
        app:tabTextColor="@color/TextColorGray"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mine_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_mine_help"
        android:layout_marginBottom="@dimen/dimen_56dp"
        />
</LinearLayout>

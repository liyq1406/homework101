<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shushan.homework101.mine.ContactActivity">

    <include
        android:id="@+id/include_mine_contact"
        layout="@layout/actionbar_layout" />

    <ImageView
        android:id="@+id/iv_mine_contact_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/include_mine_contact" />

    <ImageView
        android:id="@+id/iv_mine_contact_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/iv_mine_contact_logo" />

    <TextView
        android:id="@+id/tv_mine_contact_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:text="@string/mine_contact_qq"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_contact_qq"
        app:layout_constraintLeft_toRightOf="@+id/iv_mine_contact_qq"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_contact_qq" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:text="@string/mine_contact_qq_detail"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_contact_qq"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_contact_qq" />

    <View
        android:id="@+id/view_mine_contact_qq_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/black50"
        app:layout_constraintTop_toBottomOf="@+id/iv_mine_contact_qq"
        />
    <ImageView
        android:id="@+id/iv_mine_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/view_mine_contact_qq_line" />

    <TextView
        android:id="@+id/tv_mine_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:text="@string/mine_contact_phone"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_contact_phone"
        app:layout_constraintLeft_toRightOf="@+id/iv_mine_contact_phone"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_contact_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:text="@string/mine_contact_phone_detail"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_contact_phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_contact_phone" />

    <View
        android:id="@+id/view_mine_contact_phone_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/black50"
        app:layout_constraintTop_toBottomOf="@+id/iv_mine_contact_phone"
        />
</android.support.constraint.ConstraintLayout>

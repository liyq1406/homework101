<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    >
    <LinearLayout
        android:id="@+id/ll_visa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        >
        <TextView
            android:id="@+id/tv_take_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:text="@string/take_photo"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:background="@drawable/personal_info_popup_visa_photo_selector"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/mine_homework_listview_bg"
            />

        <TextView
            android:id="@+id/tv_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:text="@string/album"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:background="@drawable/personal_info_popup_visa_album_selector"
            />

        <TextView
            android:id="@+id/tv_visa_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:text="@string/label_cancel"
            android:gravity="center"
            android:background="@drawable/personal_info_popup_visa_cancel_selector"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            />
    </LinearLayout>

</LinearLayout>
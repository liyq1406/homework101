<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/x119"
        android:layout_height="@dimen/y119"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/y3"
        android:layout_marginRight="@dimen/x3"
        android:layout_marginLeft="@dimen/x3"
        android:layout_marginBottom="@dimen/y3"
        >

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="@dimen/x119"
            android:layout_height="@dimen/y119"
            android:scaleType="centerCrop"
            android:src="@color/color_f6"
            />

        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y18"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buybuybuy"
            android:drawableLeft="@drawable/video_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
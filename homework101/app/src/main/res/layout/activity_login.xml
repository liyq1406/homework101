<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_login_actionbar"
        layout="@layout/actionbar_layout"></include>

    <ImageView
        android:id="@+id/iv_login_rotate"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_login_actionbar" />

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_phone"
        android:hint="@string/login_please_input_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_rotate" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_lock"
        android:hint="@string/login_please_input_password"
        app:layout_constraintTop_toBottomOf="@+id/et_login_phone" />

    <TextView
        android:id="@+id/tv_login_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_agree"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/login_agree"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/et_login_password"
        android:layout_marginLeft="@dimen/dimen_50dp"
        app:layout_constraintTop_toBottomOf="@+id/et_login_password"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_new"
        android:text="@string/login_agree_service"
        app:layout_constraintLeft_toRightOf="@+id/tv_login_agree"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_login_agree"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:text="@string/login_login"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_agree" />
    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bt_login"
        android:text="@string/login_register"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textSize="@dimen/font_large_size"
        android:textColor="@color/TextColorBlack"
        app:layout_constraintRight_toLeftOf="@+id/view_login_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <View
        android:id="@+id/view_login_line"
        android:layout_width="2dp"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/TextColorBlack"
        android:layout_marginLeft="@dimen/dimen_10dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_login_register"
        app:layout_constraintTop_toTopOf="@+id/tv_login_register"
        app:layout_constraintRight_toLeftOf="@id/tv_login_forget_password"
        />
    <TextView
        android:id="@+id/tv_login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/view_login_line"
        android:text="@string/login_forget_password"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_login_register"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>
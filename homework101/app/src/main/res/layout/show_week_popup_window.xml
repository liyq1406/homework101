<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_time_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="bottom"
    android:background="@drawable/tab_bg"
    android:orientation="vertical" >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     >
      <TextView
          android:id="@+id/tv_time_title"
          android:textSize="@dimen/sp_16"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:text="@string/homework_select_time"
          android:layout_marginTop="@dimen/y11"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          />
      <TextView
          android:id="@+id/tv_time_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginLeft="@dimen/x17"
          android:textSize="@dimen/sp_16"
          android:textColor="@color/black"
          android:layout_alignBaseline="@+id/tv_pop_title"
          android:layout_marginTop="@dimen/y11"
          android:text="@string/confirm_cancel" />

      <TextView
          android:id="@+id/tv_time_ensure"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:gravity="center"
          android:layout_marginRight="@dimen/x16"
          android:text="@string/confirm_sure"
          android:textColor="@color/homepage_bottom_navigation_font"
          android:layout_alignBaseline="@+id/tv_pop_title"
          android:textSize="@dimen/sp_16"
          android:layout_marginTop="@dimen/y11"
          />
  </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/line_bg"
        android:layout_marginTop="@dimen/y11"
        />
    <LinearLayout
        android:id="@+id/tp_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <com.shushan.homework101.homework.select.WheelView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <com.shushan.homework101.homework.select.WheelView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.shushan.homework101.homework.select.WheelView
            android:id="@+id/mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_homepage_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_homepage_teacher_help_price"
        />
    <TextView
        android:id="@+id/tv_homepage_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_teacher_name"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_homepage_teacher"
        app:layout_constraintBottom_toBottomOf="@+id/bt_homepage_teacher_honor"
        />
    <Button
        android:id="@+id/bt_homepage_teacher_honor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_homepage_teacher_name"
        android:text="@string/homepage_teacher_honor"
        android:textColor="@color/common_color_g1"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_homepage_teacher_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_teacher_grade"
        app:layout_constraintTop_toBottomOf="@+id/tv_homepage_teacher_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_homepage_teacher_name"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_small_size"
        android:layout_marginTop="@dimen/dimen_10dp"
        />
    <TextView
        android:id="@+id/tv_homepage_teacher_help_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_teacher_help_count"
        app:layout_constraintTop_toBottomOf="@+id/bt_homepage_teacher_honor"
        app:layout_constraintLeft_toLeftOf="@+id/bt_homepage_teacher_honor"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_small_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_homepage_teacher_grade"
        />
    <TextView
        android:id="@+id/tv_homepage_teacher_help_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_homepage_teacher_grade"
        app:layout_constraintLeft_toLeftOf="@+id/tv_homepage_teacher_grade"
        android:text="@string/homepage_teacher_help_price"
        android:layout_marginTop="@dimen/dimen_10dp"
        />
    <Button
        android:id="@+id/bt_homepage_cables_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_homepage_teacher_help_price"
        app:layout_constraintTop_toTopOf="@+id/bt_homepage_teacher_honor"
        android:layout_marginRight="10dp"
        android:text="@string/homepage_cables_teacher"
        android:textColor="@color/TextColorWhite"
        android:background="@color/common_color_Y4"
        android:textSize="@dimen/font_large_size"
        />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    >
    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_56dp"
        android:gravity="center"
        android:text="@string/pay"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_super_large_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/tv_pay_check_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_the_check_price"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay"
        />
    <TextView
        android:id="@+id/tv_pay_check_price_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_the_check_price_details"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_pay_check_price"
        />
    <view
        android:id="@+id/view_pay_line_one"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_check_price_details"
        android:layout_marginTop="@dimen/dimen_10dp"
        >
    </view>

    <TextView
        android:id="@+id/tv_pay_sum_owing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_sum_owing"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_one"
        android:layout_marginTop="@dimen/dimen_20dp"
        />
    <TextView
        android:id="@+id/tv_pay_sum_owing_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_the_check_price_details"
        android:textColor="@color/TextColorRed"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_pay_sum_owing"
        />
    <view
        android:id="@+id/view_pay_line_two"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_sum_owing_details"
        android:layout_marginTop="@dimen/dimen_20dp"
        >
    </view>

    <TextView
        android:id="@+id/tv_pay_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_mode"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_two"
        android:layout_marginTop="@dimen/dimen_20dp"
        />
    <TextView
        android:id="@+id/tv_pay_payment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_remaining_sum"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_pay_payment"
        app:layout_constraintRight_toLeftOf="@+id/iv_pay_arrow_right"
        />
    <ImageView
        android:id="@+id/iv_pay_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_arrow_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view_pay_line_three"
        app:layout_constraintTop_toTopOf="@+id/view_pay_line_two"
        />
    <view
        android:id="@+id/view_pay_line_three"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFDBDBDB"
        app:layout_constraintTop_toBottomOf="@+id/tv_pay_payment_details"
        android:layout_marginTop="@dimen/dimen_20dp"
        >
    </view>
    <Button
        android:id="@+id/btn_pay_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ensure"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        app:layout_constraintTop_toBottomOf="@+id/view_pay_line_three"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_60dp"
        />

</android.support.constraint.ConstraintLayout>
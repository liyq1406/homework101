<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_teacher_focus_visa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_teacher_focus_grade"
        />
    <TextView
        android:id="@+id/tv_teacher_focus_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_teacher_name"
        android:textColor="@color/TextColorBlack"
        android:textSize="@dimen/font_large_size"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_teacher_focus_visa"
        />
    <TextView
        android:id="@+id/tv_teacher_focus_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_teacher_grade"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher_focus_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_teacher_focus_name"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_small_size"
        android:layout_marginTop="@dimen/dimen_10dp"
        />
    <TextView
        android:id="@+id/tv_teacher_focus_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teacher_course"
       app:layout_constraintLeft_toRightOf="@+id/tv_teacher_focus_grade"
        android:textColor="@color/TextColorGray"
        android:textSize="@dimen/font_small_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_teacher_focus_grade"
        android:layout_marginLeft="@dimen/dimen_10dp"
        />
    <Button
        android:id="@+id/bt_teacher_focus_cables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_teacher_focus_grade"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:text="@string/homepage_cables_teacher"
        android:textColor="@color/TextColorWhite"
        android:background="@color/common_color_Y4"
        android:textSize="@dimen/font_large_size"
        />
</android.support.constraint.ConstraintLayout>